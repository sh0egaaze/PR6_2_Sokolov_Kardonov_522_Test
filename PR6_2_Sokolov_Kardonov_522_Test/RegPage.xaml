<Page x:Class="PR6_2_Sokolov_Kardonov_522_Test.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid>
        <ScrollViewer>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="10">
                <TextBlock Text="ФИО:" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBoxFIO" Margin="0,0,0,10"/>

                <TextBlock Text="Логин:" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBoxLogin" Margin="0,0,0,10"/>

                <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

                <TextBlock Text="Пол:" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbGender" Margin="0,0,0,10">
                    <ComboBoxItem Content="Мужской" IsSelected="True"/>
                    <ComboBoxItem Content="Женский"/>
                </ComboBox>

                <TextBlock Text="Роль:" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbRole" Margin="0,0,0,10">
                    <ComboBoxItem Content="User" IsSelected="True"/>
                    <ComboBoxItem Content="Administrator"/>
                    <ComboBoxItem Content="Manager"/>
                </ComboBox>

                <TextBlock Text="Номер телефона:" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBoxPhone" Margin="0,0,0,10"/>

                <TextBlock Text="URL фотографии:" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBoxPhoto" Margin="0,0,0,20"/>

                <Button Content="Регистрация" x:Name="BtnRegister" Click="BtnRegister_Click" Margin="0,0,0,10"/>
                <Button Content="Отмена" x:Name="BtnCancel" Click="BtnCancel_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>